@model SpotifyLike.Admin.Models.NewAlbumForm

<h1>Adicionar album</h1>
<form method="post" asp-controller="Album" asp-action="SalvarAlbum">
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            <span class="form-field-invalid" asp-validation-for="Name"></span>
        </div>

    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Artists IDs</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.ArtistsIds, new { @class = "form-control" })
            <span class="form-field-invalid" asp-validation-for="ArtistsIds"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>