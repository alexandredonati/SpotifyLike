@model IEnumerable<SpotifyLike.Admin.Models.AlbumViewModel>

 <h1>Albums</h1>
<div>
    <a type="button" class="btn btn-primary" asp-area="Admin" asp-controller="Album" asp-action="AdicionarAlbum">
        Adicionar Album
    </a>
</div>
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Artista(s)</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@(String.Join(", ", item.Artists.Select(x => x.Nome)))</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Album" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                        <a asp-area="Admin" asp-controller="Album" asp-action="ConfirmarExcluirAlbum" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>