@model SpotifyLike.Application.Streaming.Dto.ArtistDto

<h1>Adicionar artista</h1>
<form method="post" asp-controller="Artist" asp-action="Salvar">
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
            <span class="form-field-invalid" asp-validation-for="Nome"></span>
        </div>

    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Descricao</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
            <span class="form-field-invalid" asp-validation-for="Descricao"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Link para imagem de backdrop</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Backdrop, new { @class = "form-control" })
            <span class="form-field-invalid" asp-validation-for="Backdrop"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>