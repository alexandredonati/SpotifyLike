@model IEnumerable<SpotifyLike.Application.Streaming.Dto.ArtistDto>

<h1>Artists</h1>
<div>
    <a type="button" class="btn btn-primary" href="/Artist/Adicionar">
        Adicionar Artista
    </a>
</div>
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Backdrop</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Descricao</td>
                    <td>@item.Backdrop</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Artist" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                        <a asp-area="Admin" asp-controller="Artist" asp-action="ConfirmarExcluir" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>