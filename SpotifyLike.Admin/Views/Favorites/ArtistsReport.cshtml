@model IEnumerable<SpotifyLike.Admin.Models.ReportFavoriteArtistsViewModel>

<h1>Artistas mais favoritados</h1>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Quantidade Curtidas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.LikesCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>
