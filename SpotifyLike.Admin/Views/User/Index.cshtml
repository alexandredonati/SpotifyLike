@model IEnumerable<SpotifyLike.Application.Admin.Dto.UsuarioAdminDto>
<div>
    <a type="button" class="btn btn-primary" href="/User/Criar">
        Criar Usuário
    </a>
</div>
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Perfil</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@(item.Perfil == 1 ? "Full" : "Normal")</td>
                    <td>
                        <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                        <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
