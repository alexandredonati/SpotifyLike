@model IEnumerable<SpotifyLike.Application.Admin.Dto.UsuarioAdminDto>
<h1>Users</h1>
<div>
    <a type="button" class="btn btn-primary" href="/User/Criar">
        Criar Usuário
    </a>
</div>
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Perfil</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@(item.Perfil == 1 ? "Full" : "Normal")</td>
                    <td>
                        <a asp-area="Admin" asp-controller="User" asp-action="ConfirmarExcluir" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
